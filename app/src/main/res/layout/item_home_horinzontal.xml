<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:background="@drawable/shape_rectangle_8_fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_home_food_horizontal"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:src="@drawable/iv_sample_product" />

    <TextView
        android:id="@+id/tv_home_food_title_horizontal"
        style="@style/TextView.PoppinsReguler16black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="Cherry Healthy" />

    <RatingBar
        android:id="@+id/rb_home_food_rating_horizontal"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:text="Cherry Healthy"
        android:theme="@style/RatingBar" />


</LinearLayout>