<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.add.AddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_home_title"
            style="@style/TextView.PoppinsMedium22black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:text="Add Food"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_subtitle"
            style="@style/TextView.PoppinsLight14grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp"
            android:text="Add your favorite food"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingTop="30dp"
            android:paddingRight="24dp">

            <!--name-->
            <TextView
                style="@style/TextView.PoppinsReguler16black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name" />

            <EditText
                style="@style/EditText.PoppinsReguler14black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_line_bg"
                android:hint="Food Name"
                android:padding="10dp" />

            <!--deskripsi-->
            <TextView
                style="@style/TextView.PoppinsReguler16black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Description" />

            <EditText
                style="@style/EditText.PoppinsReguler14black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_line_bg"
                android:hint="Food descripstion"
                android:padding="10dp" />

            <!--resep-->
            <TextView
                style="@style/TextView.PoppinsReguler16black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ingredients" />

            <EditText
                style="@style/EditText.PoppinsReguler14black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_line_bg"
                android:hint="Food ingredients"
                android:padding="10dp" />

            <!--harga-->
            <TextView
                style="@style/TextView.PoppinsReguler16black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Price" />

            <EditText
                style="@style/EditText.PoppinsReguler14black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_line_bg"
                android:hint="Food price"
                android:padding="10dp" />

            <!--rate-->
            <TextView
                style="@style/TextView.PoppinsReguler16black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Rate" />

            <EditText
                style="@style/EditText.PoppinsReguler14black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_line_bg"
                android:hint="Food rate"
                android:padding="10dp" />

            <!--type-->
            <TextView
                style="@style/TextView.PoppinsReguler16black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Types" />

            <EditText
                style="@style/EditText.PoppinsReguler14black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_line_bg"
                android:hint="Food type"
                android:padding="10dp" />

            <!--image-->
            <TextView
                style="@style/TextView.PoppinsReguler16black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_takePhoto"
                    style="@style/Button.BtnPrimaryPoppinsMedium14black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="Take Photo"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_importPhoto"
                    style="@style/Button.BtnPrimaryPoppinsMedium14black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Import Photo"
                    android:textAllCaps="false" />


            </LinearLayout>


            <Button
                android:id="@+id/btn_addFood"
                style="@style/Button.BtnPrimaryPoppinsMedium14black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="82dp"
                android:text="Add Food"
                android:textAllCaps="false" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>