<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.auth.signin.SignInFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="30dp"
        android:paddingRight="24dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/circle_line_profile" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/add_photo_sign_up"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:background="@drawable/add_photo" />

            </androidx.cardview.widget.CardView>


        </RelativeLayout>


        <TextView
            style="@style/TextView.PoppinsReguler16black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name" />

        <EditText
            android:id="@+id/et_name_sign_up"
            style="@style/EditText.PoppinsReguler14black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/rounded_line_bg"
            android:hint="Type your name"
            android:padding="10dp" />

        <TextView
            style="@style/TextView.PoppinsReguler16black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Email" />

        <EditText
            android:id="@+id/et_email_sign_up"
            style="@style/EditText.PoppinsReguler14black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/rounded_line_bg"
            android:hint="Type your email"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <TextView
            style="@style/TextView.PoppinsReguler16black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Type your password"
            android:text="Password" />

        <EditText
            android:id="@+id/et_password_sign_up"
            style="@style/EditText.PoppinsReguler14black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/rounded_line_bg"
            android:hint="Type your password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <Button
            android:id="@+id/btn_signUpNow"
            style="@style/Button.BtnPrimaryPoppinsMedium14black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Sign Up Now"
            android:textAllCaps="false" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>