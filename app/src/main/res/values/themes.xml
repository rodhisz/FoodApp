<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodApp" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    //style untuk no action bar
    <style name="Theme.FoodApp.noActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    //style text view
    <style name="TextView"/>

    <style name="TextView.PoppinsMedium32black">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">#020202</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextView.PoppinsReguler16black">
        <item name="android:fontFamily">@font/poppins_reguler</item>
        <item name="android:textColor">#020202</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.PoppinsMedium22black">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">#020202</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextView.PoppinsReguler14grey">
        <item name="android:fontFamily">@font/poppins_reguler</item>
        <item name="android:textColor">#8D92A3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.PoppinsReguler20black">
        <item name="android:fontFamily">@font/poppins_reguler</item>
        <item name="android:textColor">#020202</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView.PoppinsLight14grey">
        <item name="android:fontFamily">@font/poppins_reguler</item>
        <item name="android:textColor">#8D92A3</item>
        <item name="android:textSize">14sp</item>
    </style>

    //style edit text
    <style name="EditText"/>

    <style name="EditText.PoppinsReguler14black">
        <item name="android:fontFamily">@font/poppins_reguler</item>
        <item name="android:textColor">#8D92A3</item>
        <item name="android:textSize">14sp</item>
    </style>

    //style button
    <style name="Button"/>

    <style name="Button.BtnPrimaryPoppinsMedium14black">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">#020202</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/rounded_button_yellow</item>
    </style>

    <style name="Button.BtnSecondaryPoppinsMedium14black">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/rounded_button_grey</item>
    </style>

    //style Tab
    <style name="Tab">
        <item name="android:fontFamily">@font/poppins_reguler</item>
        <item name="android:textColor">#8D92A3</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">left</item>
    </style>

    //style ratingBar
    <style name="RatingBar">
        <item name="colorControlNormal">#ECECEC</item>
        <item name="colorControlActivated">#FFC700</item>
    </style>

</resources>